<krygamesbotcontrols:BaseControl
   xmlns:krygamesbotcontrols="clr-namespace:KryGamesBotControls"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"  xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"  x:Class="KryGamesBotControls.Common.DBSetup.SqlIte"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KryGamesBotControls.Common.DBSetup"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <dxlc:LayoutControl  >
        <dxlc:LayoutGroup >
            <dxlc:LayoutItem Label="File Name:"><dxe:TextEdit Name="txtFileName" EditValue="{Binding FileName}"/></dxlc:LayoutItem>
            <dxlc:LayoutItem MaxWidth="100">
                <dx:SimpleButton Content="Browse" MaxWidth="100" Click="SimpleButton_Click"/>
            </dxlc:LayoutItem>
        </dxlc:LayoutGroup>
    </dxlc:LayoutControl>
</krygamesbotcontrols:BaseControl>
