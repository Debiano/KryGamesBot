<UserControl xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"  x:Class="KryGamesBotControls.Common.LiveBetSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KryGamesBotControls.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <dxlc:LayoutControl >
        <dxlc:LayoutGroup Orientation="Vertical">
            <dxlc:LayoutItem Label="Number of bets in live bet grid">
                <dxe:SpinEdit MinValue="1" MaxValue="10000" Name="seLiveBets" EditValueChanged="seLiveBets_EditValueChanged" />
            </dxlc:LayoutItem>
            <dxlc:LayoutItem Label="Number of bets in profit chart">
                <dxe:SpinEdit MinValue="10" MaxValue="100000" Name="seProfitChart" EditValueChanged="seProfitChart_EditValueChanged" />
            </dxlc:LayoutItem>
        </dxlc:LayoutGroup>
    </dxlc:LayoutControl>
</UserControl>
