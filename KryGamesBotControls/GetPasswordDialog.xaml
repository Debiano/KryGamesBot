<dx:DXDialog xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    x:Class="KryGamesBotControls.GetPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KryGamesBotControls"
        mc:Ignorable="d"
        Title="GetPasswordDialog" Height="450" Width="800">
    <dxlc:LayoutControl >
        <dxlc:LayoutGroup Orientation="Vertical">
            <dxlc:LayoutItem Label="Password"><dxe:PasswordBoxEdit Name="pwbPass" /></dxlc:LayoutItem>
            <dxlc:LayoutItem HorizontalAlignment="Right"><dx:SimpleButton Content="Done" Name="btnDone" Click="btnDone_Click" /></dxlc:LayoutItem>
        </dxlc:LayoutGroup>
    </dxlc:LayoutControl>
</dx:DXDialog>
